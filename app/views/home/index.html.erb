<div id='main-container' class='container-fluid'>
  <div class='row'>
    <div id='sidebar' class='col-xs-3'>

      <h1>Blue Origin Reservation</h1>
      <p>Please enter all your information before be able to book our teleporters</p>
      </br>
      </br>

      <%= form_for(@schedule, :html => {:class => 'form-horizontal'}) do |f| %>
        <fieldset>
          <legend>Reservations</legend>
          <%= fields_for @user do |u| %>
          <% if @user.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
           
              <ul>
              <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
            <div class='form-group'>
              <%= u.label(:user, 'Name', :class => 'col-lg-2 control-label') %>
              <div class='col-lg-10'>
                <%= u.text_field(:name, :placeholder => 'Your name', :class => 'form-control') %>
              </div>
            </div>
          <% end %>
          <div class='form-group'>
            <%= f.label(:departure, 'Departure', :class => 'col-lg-2 control-label') %>
            <div class='col-lg-10'>
              <%= f.collection_select(:departure_id, City.all, :id, :name, {}, {:class => 'form-control'}) %>
            </div>
          </div>
          <div class='form-group'>
            <%= f.label(:arrival, 'Arrival', :class => 'col-lg-2 control-label') %>
            <div class='col-lg-10'>
              <%= f.collection_select(:arrival_id, City.all, :id, :name, {}, {:class => 'form-control'}) %>
            </div>
          </div>
          <div class='form-group'>
            <%= f.label(:date, 'Date', :class => 'col-lg-2 control-label') %>
            <div class='col-lg-10'>
              <%= f.text_field(:date, :class => 'form-control datepicker') %>
            </div>
          </div>
          <div class='form-group'>
            <div class='col-lg-10 col-lg-offset-2'>
              <%= f.submit('Book', :class => 'btn btn-success') %>
            </div>
          </div>
        </fieldset>
      <% end %>

    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: 'alert alert-info' %>
    <% end %>
  
    </div>
    <div id='sidebar' class='col-xs-9'>
      <div id='world-map'></div>
    </div>
  </div>
</div>